{{#if articles}}
{{#each articles}}

<div class="column" id="{{_id}}" style="padding-top: 20px;">
    <div class="well text-center">
        <h5 class=""><strong>Article Headline: {{headline}}</strong></h5>
        <h5 class="">Link: {{link}}</h5>
        {{#if note}}
        <h5 class="">Notes:</h5>
        {{#each note}}
        <div id="{{_id}}" class="well" style="background-color: peachpuff;">
            <h6 class="">Title: {{title}} | Content: {{body}}</h6>  
            <span class="badge deleteNote" data-idnote="{{_id}}">Delete Note</span>
        </div>
        {{/each}}
        {{else}}
        <p>No Notes.</p>
        {{/if}} 
        <button type="button" class="btn btn-success addNote" data-articleId="{{_id}}" data-noteBody="{{note.body}}" data-noteTitle="{{note.title}}" data-toggle="modal" data-target="#addModal">Add Note</button>
        &nbsp;
        <button type="button" class="btn btn-danger deleteArticle" data-articleId="{{_id}}">Delete Article</button>
    </div>
</div>
{{/each}}
{{else}}
<p>No Articles.</p>
{{/if}}


<!-- "ADD" Modal. id to match the target in button -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!--route /add-->
            <form id="addNoteForm" method="post" action="">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Note</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Modal content -->
                    <div class="form-group">
                        <label>Title</label>
                        <input id="title" type="text" class="form-control" name="title" />
                    </div>
                    <div class="form-group">
                        <label>Content</label>
                        <textarea id="body" class="form-control" name="body"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Save New Note" />
                </div>
            </form>
        </div>
    </div>
</div>
